<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/styles/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>Productos</title>
</head>
<body class="text-white" style="background-color: rgb(32, 35, 36)">
<h1 class="text-center my-5">Productos</h1>

<section class="container overflow-x-hidden py-5">
    <div class="d-grid gap-5">
        <form id="search-form" class="border" style="border-color: rgb(56, 61, 63) !important;">
            <div class="mx-0 my-4 px-3 row row-cols-1 row-cols-lg-2 align-items-center justify-content-center">
                <div class="col p-0">
                    <div class="mb-3">
                        <label for="category" class="form-label">Categoría:</label>
                        <input type="text" class="form-control" id="category" name="category">
                    </div>
                    <div class="mb-3">
                        <label for="availability" class="form-label">Disponibilidad:</label>
                        <select id="availability" class="form-select" name="availability">
                            <option value="">Todo</option>
                            <option value="true">Disponible</option>
                            <option value="false">No disponible</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="sort" class="form-label">Ordenado por precio:</label>
                        <select id="sort" class="form-select" name="sort">
                            <option value="asc">Ascendente</option>
                            <option value="desc">Descendente</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="limit" class="form-label">Límite por página:</label>
                        <input type="number" class="form-control" id="limit" name="limit" value="10">
                    </div>
                </div>
                <div class="col p-0">
                    <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-outline-primary">
                            <i class="fa-solid fa-magnifying-glass me-3"></i>Buscar
                        </button>
                    </div>
                </div>
            </div>
        </form>

        <div class="text-center">
            <a class="btn btn-lg btn-outline-primary" href="/users/carts/{{user.cart._id}}">
                <i class="fa-solid fa-circle-info me-3"></i>Ir al carrito
            </a>
        </div>

        <div class="m-0 row row-cols-1 row-cols-lg-2 row-cols-xl-3 g-4 justify-content-center border" style="border-color: rgb(56, 61, 63) !important;">
            {{#each products}}
                <div class="col mb-4">
                    <div class="card border-primary bg-black text-white" style="border-color: rgb(221, 221, 221) !important;">
                        <div class="card-body" style="background-color: rgb(24, 26, 27)">
                            <p class="card-text">_id: {{this._id}}</p>
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <p class="card-text">Precio: {{this.price}}</p>
                            <p class="card-text">Stock: {{this.stock}}</p>
                            <p class="card-text">Categoría: {{this.category}}</p>
                            <p class="card-text">Estado: {{this.status}}</p>
                            <div class="d-flex flex-column gap-3">
                                <button class="btn btn-lg btn-outline-success add-to-cart" data-id="{{this._id}}" data-cart-id="{{../user.cart._id}}">
                                    <i class="fa-solid fa-cart-shopping me-3"></i>Agregar al carrito
                                </button>
                                <a class="btn btn-lg btn-outline-primary" href="/users/products/{{this._id}}">
                                    <i class="fa-solid fa-circle-info me-3"></i>Ver detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>

{{#if products.length}}
    <section id="pagination" class="container-fluid text-center my-5">
        <div>
            {{#if hasPrevPage}}
                <a href="/users/{{prevLink}}" style="background-color: #000; padding: 17px; margin-right: 10px"><i class="fa-solid fa-caret-left" style="color: white"></i></a>
            {{/if}}
            Página {{page}} de {{totalPages}}
            {{#if hasNextPage}}
                <a href="/users{{nextLink}}" style="background-color: #000; padding: 17px; margin-left: 10px"><i class="fa-solid fa-caret-right" style="color: white"></i></a>
            {{/if}}
        </div>
    </section>
{{else}}
    <h2 class="text-center">No se encontraron productos</h2>
{{/if}}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/products.js"></script>
</body>
</html>
