<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/styles/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>Carrito</title>
</head>
<body class="text-white" style="background-color: rgb(32, 35, 36)">
<h1 class="text-center my-5">Carrito</h1>

<section class="container py-5">
    <div class="m-0 row row-cols-1 row-cols-lg-2 row-cols-xl-3 g-4 justify-content-center border" style="border-color: rgb(56, 61, 63) !important;">
        {{#each user.cart.products}}
            <div class="col mb-4">
                <div class="card border-primary bg-black text-white" style="border-color: rgb(221, 221, 221) !important;">
                    <div class="card-body" style="background-color: rgb(24, 26, 27)">
                        <p class="card-text">_id: {{this.product._id}}</p>
                        <p class="card-text">Cantidad: {{this.quantity}}</p>

                        <h5 class="card-title">{{this.product.title}}</h5>
                        <p class="card-text">{{this.product.description}}</p>
                        <p class="card-text">Precio: {{this.product.price}}</p>
                        <p class="card-text">Stock: {{this.product.stock}}</p>
                        <p class="card-text">Categoría: {{this.product.category}}</p>
                        <p class="card-text">Estado: {{this.product.status}}</p>
                        <div class="d-flex flex-column gap-3">
                            <button class="btn btn-lg btn-outline-success add-product" data-cart-id="{{../user.cart._id}}" data-product-id="{{this.product._id}}">
                                <i class="fa-solid fa-cart-shopping me-3"></i>Añadir
                            </button>
                            <button class="btn btn-lg btn-outline-danger delete-product" data-cart-id="{{../user.cart._id}}" data-product-id="{{this.product._id}}">
                                <i class="fa-solid fa-trash me-3"></i>Eliminar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</section>

{{#unless user.cart.products.length}}
    <h2 class="text-center">No se encontraron productos</h2>
{{/unless}}

<section class="d-flex flex-column gap-3 my-5 pb-5">
    <a class="btn btn-lg btn-outline-primary" href="/users/products">
        <i class="fa-solid fa-circle-info me-3"></i>Ir a la lista de productos
    </a>
    <button id="purchase-cart" class="btn btn-lg btn-outline-primary" data-cart-id="{{user.cart._id}}">
        <i class="fa-solid fa-circle-info me-3"></i>Comprar
    </button>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/cart.js" defer></script>
</body>
</html>
